        function activate(id) {
            document.querySelectorAll('.quarter-slice, .center-hub').forEach(el => el.classList.remove('active'));
            const selector = id === 'core' ? '.center-hub' : `.q-${id === 'policy' ? 'nw' : id === 'inno' ? 'ne' : id === 'social' ? 'se' : 'sw'}`;
            const target = document.querySelector(selector);
            if(target) target.classList.add('active');

            const hud = document.getElementById('hud');
            const data = dataMap[id];
            
            // Fixed ID issue
            document.getElementById('hud-title').innerText = data.title;
            document.getElementById('hud-desc').innerText = data.desc;
            
            const bullets = document.getElementById('hud-bullets');
            bullets.innerHTML = data.bullets.map(b => `<li>${b}</li>`).join('');
            hud.style.borderTopColor = data.color;
            hud.classList.add('active');
        }

        function closeHud() { 
            document.getElementById('hud').classList.remove('active'); 
            document.querySelectorAll('.quarter-slice, .center-hub').forEach(el => el.classList.remove('active')); 
        }
        
        function toggleChat() { 
            document.getElementById('chatWindow').classList.toggle('open'); 
        }

        async function sendChat() {
            const input = document.getElementById('chatInput');
            const txt = input.value.trim(); if (!txt) return;
            addMsg(txt, 'user'); input.value = '';
            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                    method: 'POST', headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({
                        contents: [{ parts: [{ text: txt }] }],
                        systemInstruction: { parts: [{ text: "You are the Strategic AI guide for the Local Government Conference 2026. Zone names: ×¤× ×™×, ×¨×©×•×™×•×ª, ×—×™×¨×•× ×•××©×‘×¨×™×, ××’×–×¨ ×©×œ×™×©×™. Respond in Hebrew. Be stately and professional." }] }
                    })
                });
                const data = await response.json();
                addMsg(data.candidates[0].content.parts[0].text, 'bot');
            } catch(e) { addMsg("×©×’×™××” ×‘×—×™×‘×•×¨ ×œ××¢×¨×›×ª ×”-AI.", 'bot'); }
        }

        function addMsg(txt, type) {
            const content = document.getElementById('chatContent');
            const div = document.createElement('div');
            div.className = `p-4 rounded-[20px] text-base leading-relaxed ${type === 'user' ? 'bg-blue-600/30 self-end ml-4' : 'bg-white/5 self-start border-r-4 border-blue-500 mr-4'}`;
            div.innerText = txt; content.appendChild(div); content.scrollTop = content.scrollHeight;
        }

        async function triggerPoll() {
            const overlay = document.getElementById('pollOverlay');
            overlay.classList.add('active');
            document.getElementById('pollQuestion').innerText = "××”×• ×”××ª×’×¨ ×”××•× ×™×¦×™×¤×œ×™ ×”×‘×•×¢×¨ ×‘×™×•×ª×¨ ×œ-2026?";
            const opts = ["×¨×’×•×œ×¦×™×” (×¤× ×™×)", "×ª×§×¦×™×‘ (×¨×©×•×™×•×ª)", "×—×•×¡×Ÿ (××’×–×¨ ×©×œ×™×©×™)", "×‘×™×˜×—×•×Ÿ (×—×™×¨×•×)"];
            const container = document.getElementById('pollOptions');
            container.innerHTML = opts.map(opt => `<button class="poll-btn" onclick="closePoll()">${opt}</button>`).join('');
        }
        
        function closePoll() { 
            document.getElementById('pollOverlay').classList.remove('active'); 
        }

        // Initialize Chart
        window.onload = () => {
            const ctx = document.getElementById('capacityChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['×¤× ×™×', '×¨×©×•×™×•×ª', '××’×–×¨ ×©×œ×™×©×™', '×—×™×¨×•× ×•××©×‘×¨×™×', '×œ×™×‘×”'],
                    datasets: [{
                        data: [350, 450, 300, 200, 150],
                        backgroundColor: ['#a855f7', '#06b6d4', '#f97316', '#ef4444', '#3b82f6'],
                        borderWidth: 0,
                        hoverOffset: 30
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { position: 'bottom', labels: { color: 'white', font: { family: 'Heebo', size: 14, weight: 'bold' }, padding: 20 } },
                        tooltip: {
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    return Array.isArray(label) ? label.join(' ') : label;
                                }
                            }
                        }
                    }
                }
            });
        };
    </script>
