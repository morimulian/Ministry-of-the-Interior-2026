    <script>
        const apiKey = ""; 
        const dataMap = {
            core: { title: "××©×¨×“ ×”×¤× ×™×: ×¡×¤×™×“ ×“×™×™×˜×™× ×’", desc: "××¤×’×©×™ ×¤×ª×¨×•×Ÿ ×—×¡××™× ×‘×–××Ÿ ×××ª ××•×œ ×”× ×”×œ×ª ×”××©×¨×“.", bullets: ["×¤×’×™×©×•×ª ×ª×§×¦×™×‘ ×•××™×©×•×¨ ×”×œ×•×•××•×ª", "×™×™×¢×•×¥ ××—×•×–×•×ª ×‘××¡×œ×•×œ ×™×¨×•×§", "×•×¢×“×ª ×”×©×§×¢×•×ª ×¤×ª×•×—×”", "×—×ª×™××” ×“×™×’×™×˜×œ×™×ª ××™×™×“×™×ª"], color: "#3b82f6" },
            policy: { title: "×¤× ×™×: ××“×™× ×™×•×ª ×•×¨×’×•×œ×¦×™×”", desc: "×¢×ª×™×“ ×”××‘× ×” ×”××¨×’×•× ×™ ×©×œ ×”×¨×©×•×™×•×ª ×•×”×“×¨×’ ×”××“×™× ×™.", bullets: ["×ª××’×™×“×™× ×•××©×™×œ×•×ª ×™×¢×™×œ×”", "××©×›×•×œ×•×ª ××–×•×¨×™×™× ×•×—×™×¡×›×•×Ÿ", "×‘×™×–×•×¨ ×¡××›×•×™×•×ª ××”××¨×›×– ×œ×©×˜×—", "×”×ª×××ª ×—×•×§×™ ×¢×–×¨ ×œ×¢×™×“×Ÿ ×”×“×™×’×™×˜×œ×™"], color: "#a855f7" },
            inno: { title: "×¨×©×•×™×•×ª: ×—×“×©× ×•×ª ×•×™×“×¢", desc: "×˜×›× ×•×œ×•×’×™×•×ª ××•× ×™×¦×™×¤×œ×™×•×ª ××ª×§×“××•×ª ×•× ×™×”×•×œ ×¨×©×•×ª×™ ×—×›×.", bullets: ["×—×•×¤×™ ×¨×—×¦×” ×—×›××™× ×•× ×™×˜×•×¨ AI", "××¢×‘×“×ª Fail-Forward ×œ×œ××™×“×”", "IoT ×¨×©×•×ª×™ ×œ×—×™×¡×›×•×Ÿ ×‘×× ×¨×’×™×”", "× ×™×”×•×œ ×™×“×¢ ××‘×•×¡×¡ ×“××˜×”"], color: "#06b6d4" },
            res: { title: "×—×™×¨×•× ×•××©×‘×¨×™×", desc: "×¡×™××•×œ×¦×™×•×ª ×—××´×œ ×•××•×›× ×•×ª ×œ×—×™×¨×•× ×‘×©×œ×˜×•×Ÿ ×”××§×•××™.", bullets: ["××©×—×§×™ ××œ×—××” ×¡×™×™×‘×¨", "×¨×¦×™×¤×•×ª ×ª×¤×§×•×“×™×ª ×ª×—×ª ×œ×—×¥", "××‘×˜×—×ª ××•×¡×“×•×ª ×—×™× ×•×š", "×ª×™××•× ×–×¨×•×¢×•×ª ××•×œ ×’×•×¤×™ ×‘×™×˜×—×•×Ÿ"], color: "#ef4444" },
